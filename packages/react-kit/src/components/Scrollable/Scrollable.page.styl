.container {
	background: #8e8e8e;
	padding: 20px;
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	overflow: auto;
}

.scrollable {
	width: 250px;
	height: 300px;
	border: 1px solid grey;
	background-color: black;
	color: #fff;

	:global {
		p {
			width: 400px;
			margin: 10px;
		}
	}
}

.section {
	display: inline-block;
	vertical-align: top;
	margin-right: 20px;
	margin-bottom: 20px;

	h1 {
		margin-bottom: 10px;
	}
}

.contentLong {
	:global {
		p {
			width: 130px;
		}
	}
}

.contentWide {
	:global {
		p {
			width: 500px;
		}
	}
}

.contentFit {
	:global {
		p {
			width: auto;
		}
	}
}
